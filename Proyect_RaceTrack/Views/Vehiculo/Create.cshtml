@using Proyect_RaceTrack.ViewModels.VehiculoViewModels;
@model VehiculoCreateViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Vehiculo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehiculoNombre" class="control-label"></label>
                <input asp-for="VehiculoNombre" class="form-control" />
                <span asp-validation-for="VehiculoNombre" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoApellido" class="control-label"></label>
                <input asp-for="VehiculoApellido" class="form-control" />
                <span asp-validation-for="VehiculoApellido" class="text-danger"></span>
            </div>
            <br>
            @* <div class="form-group">
                <label asp-for="VehiculoTipo" class="control-label"></label>
                <input asp-for="VehiculoTipo" class="form-control" />
                <span asp-validation-for="VehiculoTipo" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="VehiculoTipo" class="control-label"></label>
                <select asp-for="VehiculoTipo" class="form-control">
                    <option value="0">Sedan</option>
                    <option value="1">Hatchback</option>
                    <option value="2">Coupe</option>
                    <option value="3">PickUp</option>
                    <option value="4">Minivan</option>
                    <option value="5">Roadster</option>
                </select>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoMatricula" class="control-label"></label>
                <input asp-for="VehiculoMatricula" class="form-control" />
                <span asp-validation-for="VehiculoMatricula" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoFabricacion" class="control-label"></label>
                <input type="date" asp-for="VehiculoFabricacion" class="form-control" />
                <span asp-validation-for="VehiculoFabricacion" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Crear Vehiculo" class="btn btn-success" />
            </div>
            <br>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
